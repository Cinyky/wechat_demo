<view class="container"><view class="header"><view bindtap="click1" class="{{item.click_class}} {{types==1?'click2':'click1'}}">全部</view><view><scroll-view scrollX="true"><block wx:for="{{zx}}" wx:key="*this" wx:for-item="item"><view bindtap="click" class="{{active_index==index?'click3':'click4'}}" data-index="{{index}}">{{item.type_name}}</view></block></scroll-view></view></view><block wx:if="{{slide.length!=0}}"><view class="figure"><swiper autoplay="auto" circular="true" duration="500" indicatorActiveColor="#ccc" indicatorColor="white" indicatorDots="true" interval="5000"><block wx:for="{{slide}}" wx:key="*this" wx:for-item="item"><swiper-item><image bindtap="jumps" data-appid="{{item.appid}}" data-name="{{item.xcx_name}}" data-src="{{item.src}}" mode="aspectFill" src="{{url}}{{item.logo}}"></image></swiper-item>\n        ++++\n</block></swiper></view></block><view class="message_list"><block wx:for="{{info}}" wx:key="*this" wx:for-item="item"><block wx:if="{{info.length!=0}}"><view bindtap="message" data-id="{{item.id}}"><view class="title">{{item.title}}</view><block wx:if="{{item.imgs!=''}}"><view class="message_image"><block wx:for="{{item.imgs}}" wx:key="*this" wx:for-item="item"><image mode="aspectFill" src="{{url}}{{item}}"></image></block></view></block><view class="message_info"><block wx:if="{{item.type==1}}" ><text>{{system.pt_name}}</text></block><block wx:else><text>{{item.name}}</text></block><text>{{item.yd_num}}阅读</text><block wx:if="{{item.m<24}}"><text><block wx:if="{{item.m==0}}"><text>{{item.h}}分钟前发布</text></block><block wx:if="{{item.m>0}}"><text>{{item.m}}小时{{item.h}}分钟前发布</text></block></text></block><block wx:if="{{item.m>=24}}"><text>{{item.time}}  发布</text></block></view></view></block></block></view></view><block wx:if="{{refresh_top==true&&info.length!=0}}"><view class="loading rel">\n  我也是有底线的\n</view></block><block wx:if="{{refresh_top==false&&info.length>8}}"><view class="loading rel"><image class="ab udlr" mode="widthFix" src="../image/loading.gif"></image></view></block><block wx:if="{{system.is_openzx==1}}"><view bindtap="release" class="release"><image mode="aspectFill" src="../image/release.png"></image></view></block><block wx:if="{{info.length==0}}"><view class="welfare" style="top:{{top}}rpx"><image mode="scaleToFill" src="../image/none_welfare.png"></image></view></block>
