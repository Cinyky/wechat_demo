.container{ width: 100%; }
.select{ color: #ED414A; border-bottom: 5rpx solid #ED414A; }
.head{ height: 90rpx; width: 100%; background: #fff; display: -webkit-box; display: -ms-flexbox; display: flex; }
.head>wx-view{ -webkit-box-flex: 3; -ms-flex: 3; flex: 3; font-size: 30rpx; text-align: center; line-height: 90rpx; }
.info{ width: 100%; height: 200rpx; margin-top: 20rpx; background: #fff; }
.info>wx-view:nth-child(1){ width: 30%; height: 100%; display: inline-block; vertical-align: top; }
.info>wx-view:nth-child(2){ width: 65%; height: 100%; display: inline-block; }
.information>wx-view{ width: 100%; }
.information>wx-view:nth-child(1){ height: 60rpx; width: 60%; line-height: 70rpx; font-size: 34rpx; font-weight: 500; text-align: left; text-indent: 40rpx; }
.information>wx-view:nth-child(2){ height: 50rpx; line-height: 50rpx; font-size: 28rpx; text-align: left; color: #ED414A; text-indent: 40rpx; }
.information>wx-view:nth-child(3){ height: 100rpx; font-size: 28rpx; }
.info_three wx-text{ text-align: center; line-height: 100rpx; width: auto; padding: 10rpx 25rpx; border-radius: 25rpx; margin-left: 40rpx; }
.back1{ background: #ED414A; color: #fff; }
.back2{ background: #f7f7f7; color: #333; border: 1rpx solid #e5e5e5; }
.img1{ width: 95%; height: 90%; right: 0; border-radius: 8rpx; top: 0; }
.cancel{ width: 50rpx; height: 50rpx; right: 5%; top: 5%; }
.cancel wx-image{ width: 40rpx; height: 40rpx; }
