page { background: #ebecf1; }
.container{ width: 100%; height: 100%; background: #fff; }
.header{ width: 100%; height: 100rpx; }
.header>wx-view{ float: left; line-height: 100rpx; font-size: 30rpx; }
.header>wx-view:nth-child(1){ width: 25%; height: 100%; text-align: center; -webkit-box-sizing: border-box; box-sizing: border-box; }
.header>wx-view:nth-child(2){ width: 75%; height: 100%; }
.header>wx-view wx-scroll-view{ width: 100%; height: 100%; white-space: nowrap; }
.click1{ border-bottom: 8rpx solid #fff; }
.click2{ border-bottom: 8rpx solid orange; }
.click3{ color: #ED414A; }
.header>wx-view wx-scroll-view wx-view{ width: auto; display: inline-block; height: 100%; padding: 0 25rpx; -webkit-box-sizing: border-box; box-sizing: border-box; }
.figure{ width: 100%; height: 400rpx; }
.figure wx-swiper wx-image{ width: 100%; height: 100%; }
.figure wx-swiper{ width: 100%; height: 100%; }
.message_list{ width: 100%; height: auto; }
.message_list>wx-view{ width: 95%; height: auto; margin: 0 auto 0; background: #fff; border-bottom: 1rpx solid #e5e5e5; }
.message_list>wx-view:last-child{ border:none; }
.title{ height: auto; width: 100%; line-height: 50rpx; font-size: 32rpx; padding-top: 20rpx; padding-bottom: 20rpx; }
.message_image{ height: 160rpx; width: 100%; }
.message_image>wx-image{ width: 32%; height: 100%; }
.message_image>wx-image:nth-child(2){ margin-left:2%; margin-right:2% }
.message_info{ width: 100%; height: 70rpx; line-height: 70rpx; color: #999; font-size: 22rpx; }
.message_info>wx-text:nth-child(1){ margin-right: 30rpx; }
.message_info>wx-text:nth-child(3){ float: right; }
.release{ width: 80rpx; height: 80rpx; border-radius: 50%; position: fixed; bottom: 100rpx; background: #fff; right: 40rpx; }
.release wx-image{ width: 100%; height: 100%; }
.welfare{ position: fixed; width: 60%; height: 400rpx; left:20%; overflow: hidden; }
.welfare wx-image{ width: 100%; }
