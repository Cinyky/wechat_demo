page { background: #ebecf1; }
.container{ width: 100%; height: 100%; background: #fff; }
.header{ width: 100%; height: 100rpx; border-bottom: 10rpx solid #ebecf1; }
.header>wx-view{ float: left; line-height: 100rpx; font-size: 30rpx; }
.header>wx-view:nth-child(1){ width: 20%; height: 100%; text-align: center; -webkit-box-sizing: border-box; box-sizing: border-box; }
.header>wx-view:nth-child(2){ width: 80%; height: 100%; }
.header>wx-view wx-scroll-view{ width: 100%; height: 100%; white-space: nowrap; }
.loading{ width: 100%; height: 60rpx; background: #fff; color: #999; line-height: 60rpx; text-align: center; font-size: 22rpx; }
.loading wx-image{ width: 69rpx; height: 15rpx; }
.click1{ border-bottom: 5rpx solid #fff; }
.click2{ border-bottom: 5rpx solid  #ED414A; }
.click4{ border-bottom: 5rpx solid #fff; }
.click3{ color: #ED414A; border-bottom: 5rpx solid #ED414A }
.header>wx-view wx-scroll-view wx-view{ width: auto; display: inline-block; height: 100%; padding: 0 25rpx; -webkit-box-sizing: border-box; box-sizing: border-box; }
.figure{ width: 100%; height: 400rpx; }
.figure wx-swiper wx-image{ width: 100%; height: 100%; }
.figure wx-swiper{ width: 100%; height: 100%; }
.message_hd{ display: -webkit-box; display: -ms-flexbox; display: flex; -webkit-box-orient: horizontal; -webkit-box-direction: normal; -ms-flex-direction: row; flex-direction: row; -webkit-box-pack: justify; -ms-flex-pack: justify; justify-content: space-between; height: 160rpx; width: 100%; }
.message_hd .title{ width: 60%; }
.message_hd>wx-image{ width: 32%; height: 100%; }
.message_list{ width: 100%; height: auto; }
.message_list>wx-view{ width: 95%; height: auto; margin: 0 auto 0; padding: 20rpx 0 0; background: #fff; border-bottom: 1rpx solid #e5e5e5; }
.message_list>wx-view:last-child{ border:none; }
.title{ height: auto; line-height: 50rpx; font-size: 32rpx; padding-bottom: 10rpx; }
.message_image{ height: 160rpx; width: 100%; }
.message_image>wx-image{ width: 32%; height: 100%; }
.message_image>wx-image:nth-child(2){ margin-left:2%; margin-right:2% }
.message_info{ display: -webkit-box; display: -ms-flexbox; display: flex; -webkit-box-orient: horizontal; -webkit-box-direction: normal; -ms-flex-direction: row; flex-direction: row; -webkit-box-align: center; -ms-flex-align: center; align-items: center; -webkit-box-pack: justify; -ms-flex-pack: justify; justify-content: space-between; width: 100%; height: 70rpx; line-height: 70rpx; color: #999; font-size: 22rpx; }
.message_info wx-view{ display: -webkit-box; display: -ms-flexbox; display: flex; -webkit-box-orient: horizontal; -webkit-box-direction: normal; -ms-flex-direction: row; flex-direction: row; -webkit-box-align: center; -ms-flex-align: center; align-items: center; }
.message_info wx-image{ width: 30rpx; height: 30rpx; margin-right: 10rpx; }
.message_info wx-view>wx-text:nth-child(1){ margin-right: 30rpx; }
.release{ width: 80rpx; height: 80rpx; border-radius: 50%; position: fixed; bottom: 100rpx; background: #fff; right: 40rpx; }
.release wx-image{ width: 100%; height: 100%; }
.welfare{ margin-top: 100rpx; display: -webkit-box; display: -ms-flexbox; display: flex; -webkit-box-pack: center; -ms-flex-pack: center; justify-content: center; -webkit-box-align: center; -ms-flex-align: center; align-items: center; }
.welfare wx-image{ width: 240rpx; height: 320rpx; }
