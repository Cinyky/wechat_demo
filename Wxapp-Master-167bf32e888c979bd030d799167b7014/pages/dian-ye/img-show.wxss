/* pages/dian-ye/img-show.wxss */
@import "/css/DuoguanDianDanYe/DuoguanDianDanYe-template-default.wxss";

page {
    background: #fff;
}

image {
    width: 100%;
    height: 100%;
}

.shop-severs {
    padding: 0 30rpx;
}

.msg-title {
    position: relative;
    font-weight: bold;
}

.msg-title::before {
    content: '';
    display: block;
    width: 4px;
    height: 36rpx;
    position: absolute;
    top: 0;
    bottom: 0;
    margin-top: auto;
    margin-bottom: auto;
    left: -30rpx;
}

.shop-img-item {
    width: 24.25%;
    float: left;
    margin-top: 1%;
    margin-right: 1%;
}

.shop-img-item:nth-child(4n+4) {
    margin-right: 0;
}

.img-item {
    width: 100%;
    padding-top: 100%;
    position: relative;
}

.img-item image {
    position: absolute;
    top: 0;
    left: 0;
}
