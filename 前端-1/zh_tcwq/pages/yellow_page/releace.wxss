.head{ width: 100%; height: 300rpx; background: #fff; }
.head>wx-view{ width: 240rpx; height: 250rpx; font-size: 24rpx; line-height: 50rpx; text-align: center; }
.head>wx-view wx-image{ width: 200rpx; margin-left: 20rpx; height: 200rpx; border:1rpx solid #ccc; }
.page { width: 100%; height: auto; background: #fff; margin-top: 10rpx; }
.body>wx-view{ width: 95%; height: 80rpx; line-height: 80rpx; font-size: 26rpx; margin: 0 auto 0; border-bottom: 1rpx solid #f7f7f7; -webkit-box-sizing: border-box; box-sizing: border-box; }
.body>wx-view:last-child{ border: none; }
.body>wx-view wx-view{ display: inline-block; vertical-align: top; }
.body>wx-view wx-view:nth-child(1){ width: 20%; height: 100%; }
.body>wx-view wx-view:nth-child(2){ width: 80%; height: 100%; }
.body>wx-view wx-view wx-input{ width: 100%; height: 100%; }
.body>wx-view wx-view wx-view{ width: 100%; height: 100%; }
.foot{ width: 100%; height: auto; background: #fff; margin-top: 10rpx; }
.foot>wx-view:nth-child(1){ width: 95%; height: 80rpx; font-size: 30rpx; line-height: 80rpx; margin: 0 auto 0; border-bottom: 1rpx solid #f7f7f7; }
.foot>wx-view:nth-child(2){ width: 95%; margin: 0 auto 0; padding: 0 0 20rpx 0; }
.radio{ display: block; zoom: 80%; margin-top: 20rpx; font-size: 30rpx; }
wx-button{ width: 95%; height: 80rpx; background: #ED414A; color: #fff; font-size: 28rpx; line-height: 80rpx; margin-top: 20rpx; }
