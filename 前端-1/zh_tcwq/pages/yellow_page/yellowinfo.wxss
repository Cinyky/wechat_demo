.container{ width: 100%; overflow-x: hidden; }
.head{ width: 100%; height: 150rpx; background: #fff; }
.head>wx-view{ display: inline-block; vertical-align: top; }
.head>wx-view:nth-child(1){ width: 25%; height: 100%; }
.head>wx-view wx-image{ width: 120rpx; height: 120rpx; left: 20rpx; border-radius: 50%; }
.head>wx-view:nth-child(2){ width: 75%; height: 100%; }
.head>wx-view wx-view:nth-child(1){ height: 80rpx; font-size: 30rpx; line-height: 80rpx; }
.head>wx-view wx-view:nth-child(2){ font-size: 26rpx; line-height: 40rpx; }
.head>wx-view wx-view wx-text:nth-child(1){ padding: 5rpx 10rpx; background: #ED414A; color: #fff; border-radius: 10rpx; }
.head>wx-view wx-view wx-text:nth-child(2){ float: right; margin-right: 20rpx; }
.tel{ width: 100%; height: 80rpx; margin-top: 20rpx; font-size: 28rpx; line-height: 80rpx; background: #fff; }
.tel>wx-text{ padding: 0rpx 20rpx; }
.tel>wx-text:nth-child(2){ margin-left: 15rpx; }
.address,.detail{ width: 100%; height: auto; background: #fff; margin-top: 20rpx; }
.address>wx-view:nth-child(1){ text-indent: 20rpx; line-height: 60rpx; height: 60rpx; font-size: 30rpx; border-bottom: 1rpx solid #f7f7f7; }
.detail>wx-view:nth-child(1){ text-indent: 20rpx; line-height: 60rpx; height: 60rpx; font-size: 30rpx; border-bottom: 1rpx solid #f7f7f7; }
.address>wx-view:nth-child(2){ text-indent: 20rpx; line-height: 60rpx; height: 60rpx; padding: 20rpx 0; font-size: 28rpx; }
.address>wx-view wx-text:nth-child(3){ height: 60rpx; padding: 5rpx 30rpx 5rpx 15rpx; border-radius: 8rpx; background: #ED414A; color: #fff; float: right; margin-right: 15rpx; font-size: 24rpx; }
.address>wx-view wx-image{ width: 40rpx; margin-top: 10rpx; height: 40rpx; }
.address>wx-view wx-text:nth-child(2){ display: inline-block; max-width: 530rpx; vertical-align: top; }
.detail>wx-view:nth-child(2){ width: 95%; height: auto; line-height: 40rpx; margin: 0 auto; padding: 20rpx 0; font-size: 28rpx; text-indent: 2em; }
.footer { width: 100%; height: 90rpx; background: #fff; position: fixed; bottom: 0; z-index: 100; }
.footer wx-button{ position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: none; z-index: 50000; }
.footer wx-button:after{ border: none; }
.footer>wx-view { height: 100%; -webkit-box-sizing: border-box; box-sizing: border-box; float: left; }
.footer>wx-view:nth-child(1) { width: 20%; }
.footer>wx-view:nth-child(2) { width: 20%; }
.footer>wx-view:nth-child(3) { width: 20%; }
.footer>wx-view:nth-child(4) { width: 40%; text-align: center; background: #ed414a; color: #fff; overflow: hidden; }
.coupon { width: 100%; height: 400rpx; background: orange; }
.more { margin-top: 20rpx; width: 100%; height: 70rpx; line-height: 70rpx; background: #fff; }
.more>wx-text:nth-child(1) { float: left; text-indent: 20rpx; color: #333; font-size: 30rpx; }
.more>wx-text:nth-child(2) { float: right; margin-right: 15rpx; color: #999; font-size: 26rpx; }
.commodity { width: 100%; height: auto; }
.commodity>wx-view { width: 95%; height: auto; margin: 0 auto 0; }
.goods { width: 49%; height: auto; overflow: hidden; margin-top: 20rpx; display: inline-block; background: #fff; -webkit-box-sizing: border-box; box-sizing: border-box; }
.child>wx-view:nth-child(odd) { }
.child>wx-view:nth-child(even) { margin-left: 2%; }
.goods_img { width: 100%; height: 300rpx; }
.goods>wx-view { width: 100%; }
.goods>wx-view:nth-child(2) { height: 80rpx; line-height: 40rpx; font-size: 26rpx; font-weight: 500; padding-left: 10rpx; padding-right: 10rpx; display: -webkit-box; overflow: hidden; text-overflow: ellipsis; word-break: break-all; -webkit-box-orient: vertical; -webkit-line-clamp: 2; }
.goods>wx-view:nth-child(3) { height: 60rpx; line-height: 60rpx; font-size: 22rpx; }
.goods>wx-view:nth-child(4) { height: 60rpx; line-height: 60rpx; font-size: 24rpx; width: 100%; top: 1%; left: -39%; text-align: center; background: #ed414a; -webkit-transform: rotate(-45deg); transform: rotate(-45deg); color: #fff; }
.goods>wx-view:nth-child(5) { height: 40rpx; width: 40rpx; bottom: 10rpx; right: 30rpx; }
.goods>wx-view wx-image { width: 100%; height: 100%; }
.nav_phone>wx-view:nth-child(1) { height: 50%; font-size: 28rpx; width: 100%; line-height: 60rpx; }
.nav_phone>wx-view:nth-child(2) { height: 50%; width: 100%; font-size: 26rpx; line-height: 40rpx; }
.icon { width: 100%; height: 60%; }
.icon wx-image { width: 45rpx; }
.nav_title { width: 100%; height: 40rpx; font-size: 24rpx; line-height: 40rpx; }
