.container{ width: 100%; height: 100%; }
.container>wx-view{ width: 100%; height: auto; }
.search_jilu{ width: 100%; height: 146px; -webkit-box-sizing: border-box; box-sizing: border-box; overflow-y: hidden; overflow-x: hidden; }
.search_jilu>wx-view:nth-child(1){ color: #666; line-height: 60rpx; height: 60rpx; width: 100%; text-indent: 20rpx; font-size: 26rpx; }
.search_jilu>wx-view:nth-child(2){ background: #fff; width: 95%; padding: 10rpx 20rpx; padding-bottom: 10rpx; }
.search_jilu>wx-view wx-text{ padding: 10rpx 20rpx; font-size: 24rpx; }
.city_name{ font-size: 28rpx; height: 50rpx; margin-left: 20rpx; display: inline-block; text-align: center; padding: 10rpx 20rpx; background: #fff; border-radius: 10rpx; line-height: 50rpx; margin-bottom: 20rpx; }
.choosecity{ background: #fff; font-size: 30rpx; padding: 20rpx 20rpx; display: -webkit-box; display: -ms-flexbox; display: flex; -webkit-box-orient: horizontal; -webkit-box-direction: normal; -ms-flex-direction: row; flex-direction: row; -ms-flex-pack: distribute; justify-content: space-around; -webkit-box-align: center; -ms-flex-align: center; align-items: center; color: #ED414A; }
.choosecity wx-image{ width: 40rpx; height: 40rpx; }
.xz{ font-size: 27rpx; display: inline-block; background: #ED414A; color: #fff; margin-bottom: 10rpx; margin: 20rpx 20rpx; padding: 5rpx 10rpx; border-radius: 10rpx; }
.itemon{ border-bottom:2rpx solid #ED414A; color: #ED414A; font-size: 40rpx; }
.city_name wx-text{ width: 80%; height: 100%; background: #fff; border-radius: 10rpx; }
.city_title{ font-size: 27rpx; display: inline-block; background: #fff; margin: 20rpx 20rpx; padding: 5rpx 10rpx; border-radius: 10rpx; }
.scroll1{ border-top: 1rpx solid #d5d5d5; position: fixed; left: 0; bottom: 0; width:20%; height: 100%; background: #fff; }
.search{ width: 100%; border-radius: 15rpx; overflow: hidden; }
.scroll1 wx-view{ width: 100%; height: 70rpx; line-height: 70rpx; text-align: center; }
.none{ border-bottom: 1rpx solid #f7f7f7; font-size: 30rpx; }
.scroll2{ border-top: 1rpx solid #d5d5d5; width: 40%; background: #f7f7f7; position: fixed; left: 20%; -webkit-box-sizing: border-box; box-sizing: border-box; border-right: 1rpx solid #d5d5d5; }
.scroll3{ border-top: 1rpx solid #d5d5d5; width: 40%; background: #f7f7f7; position: fixed; left: 60%; }
.search>wx-view{ width: 95%; height: 60%; background: #fff; border-radius: 10rpx; }
.search>wx-view wx-input{ width: 82%; height: 100%; font-size: 24rpx; margin-left: 2%; }
.search>wx-view wx-view{ width: 16%; height: 100%; background: #ED414A; border-top-right-radius: 15rpx; border-bottom-right-radius: 15rpx; right: 0; top: 0; }
.search>wx-view wx-view wx-icon{ width: 40rpx; height: 40rpx; }
.search_result{ width: 100%; position: fixed; left: 0; background: #fff; z-index: 50000; overflow: scroll; }
.search_result>wx-view{ width: 95%; height: 80rpx; margin: 0 auto 0; font-size: 28rpx; line-height: 80rpx; border-bottom: 2rpx solid #f7f7f7; }
